<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cl_gold"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.project.SudokuPlayActivity" >

   
    <ImageView
        android:id="@+id/grid"
        android:layout_width="296dp"
        android:layout_height="296dp"
        android:layout_x="26dp"
        android:layout_y="42dp"
        android:src="@drawable/grid" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="194dp"
        android:layout_y="6dp"
        android:text="Let&apos;s play Sudoku"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="524dp"
        android:layout_y="10dp"
        android:src="@android:drawable/btn_dialog" />

    <Button
        android:id="@+id/btnNewGame"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_x="480dp"
        android:layout_y="129dp"
        android:text="New Game"
        android:textSize="14dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_x="479dp"
        android:layout_y="187dp"
        android:text="Tutorial"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/layoutBtn2"
        android:layout_width="46dp"
        android:layout_height="206dp"
        android:layout_x="406dp"
        android:layout_y="52dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button6"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6" />

        <Button
            android:id="@+id/button7"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="493dp"
        android:layout_y="80dp"
        android:text="00 : 00"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/layoutBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="352dp"
        android:layout_y="52dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="26dp"
        android:layout_y="49dp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="355dp"
        android:layout_y="319dp"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <AbsoluteLayout
        android:id="@+id/table"
        android:layout_width="296dp"
        android:layout_height="296dp"
        android:layout_x="26dp"
        android:layout_y="44dp" >
    </AbsoluteLayout>

</AbsoluteLayout>
