<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.project.MainActivity" >

    <Button
        android:id="@+id/Button02"
        android:layout_width="189dp"
        android:layout_height="56dp"
        android:layout_x="164dp"
        android:layout_y="227dp"
        android:text="Words" />

    <Button
        android:id="@+id/button1"
        android:layout_width="189dp"
        android:layout_height="56dp"
        android:layout_x="28dp"
        android:layout_y="142dp"
        android:text="Sudoku" 
        android:onClick="chooseSudoku"/>

    <Button
        android:id="@+id/Button01"
        android:layout_width="189dp"
        android:layout_height="56dp"
        android:layout_x="306dp"
        android:layout_y="140dp"
        android:text="Memory" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="160dp"
        android:layout_y="60dp"
        android:text="GAME CENTER"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32dp" />

</AbsoluteLayout>
